---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Banner from '../components/Banner.astro';
import BodyScripts from '../components/BodyScripts.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { getCategoryLabel } from '../consts';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import { BANNERS, BANNER_PLACEMENTS } from '../data/banners';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const homeBannerIds = new Set(BANNER_PLACEMENTS.home);
const homeBanners = BANNERS.filter(
	(b): b is typeof b & { image: import('astro:assets').ImageMetadata } =>
		homeBannerIds.has(b.id) && 'image' in b && b.image != null
);
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.banners-home {
				margin-bottom: 2rem;
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
			.banners-home .banner-link {
				border-radius: 12px;
				overflow: hidden;
				box-shadow: var(--box-shadow);
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="main-home">
			<div class="main-inner">
				<div class="hero-text">
					<h1>{SITE_TITLE}</h1>
					<p class="tagline">{SITE_DESCRIPTION}</p>
				</div>
				{homeBanners.length > 0 && (
					<div class="banners-home">
						{homeBanners.map((banner) => (
							<Banner href={banner.link} src={banner.image} />
						))}
					</div>
				)}
				<ul class="post-list">
					{posts.map((post, index) => (
						<li class="post-card">
							<a href={`/${post.id}/`} class="card-link">
								{post.data.heroImage && (
									<Image
										width={600}
										height={338}
										src={post.data.heroImage}
										alt=""
										class="card-image"
										loading={index === 0 ? 'eager' : 'lazy'}
										fetchpriority={index === 0 ? 'high' : 'auto'}
									/>
								)}
								<div class="card-body">
									<div class="card-category">
										{getCategoryLabel(post.data.category)}
									</div>
									<h2 class="card-title">{post.data.title}</h2>
									<p class="card-excerpt">{post.data.description}</p>
									<span class="read-more">
										Ler artigo â†’
									</span>
								</div>
							</a>
						</li>
					))}
				</ul>
			</div>
		</main>
		<Footer />
		<BodyScripts />
	</body>
</html>
